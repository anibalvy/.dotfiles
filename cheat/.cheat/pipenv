# install package
pipenv install package

# run a command with the indicated version in pipenv
pipenv run python script.py

# install from requirements file
pipenv install -r app/requirements.txt

# give an output to requirements
pipenv lock --requirements > requirements.txt

# show a package version
pip show <package>

# check 
pipenv check

# change python version 
pipenv --python 3.8

# install development [dev-packages]
pipenv install <package> --dev

# uninstall 
pipenv uninstall <package>

# get path of virtual environment
pipenv --venv

# load environment variables
# create a .env file
echo 'SECRET_KEY="supersecret"' > .env

# using in app
os.environ['TOKEN']


