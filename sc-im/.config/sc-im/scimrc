set autocalc
set numeric
set numeric_decimal=0
set ignorecase

# [default 3000 milli seconds] the time sc-im waits for a valid command to be entered (the time it stays in '?')
set command_timeout=1000

set overlap
# set overlap  # show content of the cell overlap adjacent column
# set truncate  # show content of the cell truncated
# set autowrap  # show content of the cell wrap it increaing the rows hight

# set xlsx_readformulas  # import formulas instead of values from xlxs file
set XLSX_READFORMULAS
# set import_delimited_as_text # import numbers as text

# set half_page_scroll=1 # 1: half screen, 0: full page (default)
set half_page_scroll=1

# set default_copy_to_clipboard_cmd=<command> # setting default, This process will export content as plain text. It will not delimit columns with '\t' chars.
# set copy_to_clipboard_delimited_tab=1 # when copy to clipboard, use tabs
set copy_to_clipboard_delimited_tab=1

